@model Ferdo.Track.Model.Dtos.CenterDto

<h4>تعریف مرکز</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCenter" asp-controller="Center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <input asp-for="UserId" class="form-control" />

            <div class="form-group">
                <label asp-for="ContractExpireTime" class="control-label"></label>
                <input asp-for="ContractExpireTime" class="form-control" />
                <span asp-validation-for="ContractExpireTime" class="text-danger"></span>
            </div>

            <input asp-for="Id" type="hidden" />
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت به لیست</a>
</div>

